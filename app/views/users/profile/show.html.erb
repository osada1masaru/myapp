<div class="container text-center">
  <div class="row">
    <div class="col">
      <%= render "shared/users/side_navigation" %>
    </div>
    <div class="col-8">
      <div class="hstack gap-3">
        <h2>プロフィール設定</h2>
        <h4>
          <%= link_to "編集", edit_user_registration_path, class: "link-info text-decoration-none" %>
        </h4>
      </div>

      <ul class="list-group list-group-flush">
        <li class="list-group-item col">
          <%= label_tag :email, "メールアドレス", class: "row" %>
          <div class="row">
            <%= current_user.email %>
          </div>
        </li>
        <li class="list-group-item col">
          <%= label_tag :password, "パスワード", class: "row" %>
          <p class="row">******</p>
        </li>
      </ul>
    </div>
  </div>
</div>
