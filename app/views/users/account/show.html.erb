<div class="container text-center">
  <div class="row">
    <%= render "shared/users/side_navigation" %>
    <div class="hstack gap-3">
      <h2>アカウント設定</h2>
      <h4>
        <%= link_to "編集", edit_user_registration_path, class: "link-info text-decoration-none" %>
      </h4>
    </div>

    <ul class="list-group list-group-flush">
      <li class="list-group-item">
        <%= label_tag :email, "メールアドレス" %>
        <%= current_user.email %>
      </li>
      <li class="list-group-item">
        <%= label_tag :password, "パスワード" %>
        <p>******</p>
      </li>
    </ul>
  </div>
</div>
